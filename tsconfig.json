{
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"noEmit": true,
		"strict": true,
		"target": "es2023",
		"module": "node16",
		"moduleResolution": "node16",
		"allowSyntheticDefaultImports": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true
	},
	"include": ["*.js", "src/**/*"]
}
